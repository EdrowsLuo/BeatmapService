<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#444444" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:alpha="150"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cover" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/view2"
                android:layout_alignParentStart="true"
                android:background="@drawable/image_cover" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/beatmapInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/title"
                android:layout_below="@+id/title"
                android:singleLine="false"
                android:maxLines="2"
                android:textColor="#888888"
                tools:text="xxxxxxx" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-7dp"
                android:max="1000"
                android:progress="500" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageView"
                android:layout_alignLeft="@id/imageView"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewStd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mode_std" />

                <ImageView
                    android:id="@+id/imageViewTaiko"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mode_taiko" />

                <ImageView
                    android:id="@+id/imageViewCatch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mode_catch" />

                <ImageView
                    android:id="@+id/imageViewMania"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mode_mania" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/downloadButton"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/download" />

            <ImageButton
                android:id="@+id/musicPreview"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_toLeftOf="@id/downloadButton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/music" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                android:text="50.5%"
                android:textColor="#555555"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rankStateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/rounded_rect"
                android:gravity="center"
                android:padding="5dp"
                android:text="RANKED"
                android:textAlignment="center"
                android:textColor="#DDFFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>